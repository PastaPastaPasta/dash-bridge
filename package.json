{
  "name": "mainnet-bridge",
  "version": "1.0.0",
  "description": "Non-custodial Dash Core to Platform bridge",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "npx playwright@1.52.0 test e2e/deterministic.spec.ts",
    "test:e2e:headed": "npx playwright@1.52.0 test e2e/deterministic.spec.ts --headed",
    "test:e2e:live": "PW_E2E_LIVE=1 npx playwright@1.52.0 test e2e/live.testnet.spec.ts",
    "test:e2e:install": "npx playwright@1.52.0 install --with-deps chromium"
  },
  "dependencies": {
    "@dashevo/evo-sdk": "3.1.0-dev.1",
    "@noble/hashes": "^1.4.0",
    "@noble/secp256k1": "^2.1.0",
    "@scure/bip32": "^2.0.1",
    "@scure/bip39": "^2.0.1",
    "bs58check": "^4.0.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.6",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
